{
    "manifest_version": 3,
    "name": "SimCompanies Contract Calculator",
    "description": "Helps calcuate the contracts in SimCompanies",
    "version": "12.16.23",
    "action":{
        "default_popup": "popup/popup2.html",
        "default_title": "SimCompanies Contract Calculator"
    },
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      },
    "author": "SpookDaCat",
    "permissions": ["webNavigation", "storage", "tabs"],
    "content_scripts": [
      {
        "matches": ["https://www.simcompanies.com/*"],
        "js": ["scripts/content-script.js"]
      }
    ],
    "background": {
      "service_worker": "scripts/background.js"
    },
    "host_permissions": ["*://simcompanies.com/*"]
}